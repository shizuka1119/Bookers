
<html>
<head>
  <meta charset="UTF-8">
  <title>Bookers</title>
</head>

<body>

<div class="successfully">
<%= flash[:success] %>
</div>

<table>
  <thead>
    <h1>Books</h1>
     <tr>
       <th>Title</th>
       <th>Body</th>
       <th colspan="3"></th>
     </tr>
  </thead>

  <tbody>
      <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show",book_path(book) %></td>
      <td><%= link_to "Edit",edit_book_path(book) %></td>
      <td><%= link_to "Destroy", destroy_book_path(book), method: :delete, "data-confirm" => "Are you sure?" %></td>
    </tr>
      <% end %>
   </tbody>
 </table>

  
<h2>New book</h2>
   <% if @book && @book.errors.any? %>
   <div id="error_explanation">
       <h2><%= @book.errors.count %>errors prohibited this obj from being saved:<br></h2>
     <ul>
       <% @book.errors.full_messages.each do |message| %>
       <li><%= message %></li>
       <% end %>
       <% end %>
     </ul>
   </div>

<%= form_for(@book) do |f| %>


    <div class="field">
      <label for>Title</label>
      <%= f.text_field :title %>
    </div>

    <div class="field">
      <label for>Body</label>
      <%= f.text_area :body %>
    </div>

    <div cladd="actions">
      <a> </a>
      <%= f.submit 'Create Book' %>
    </div>
<% end %>

</body>
</html>
